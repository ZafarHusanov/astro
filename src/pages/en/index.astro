---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import en from '../../i18n/en.json';
---
<BaseLayout title={en.siteTitle} lang="en">
  <Header t={en} lang="en" slot="header" />
  <h1 class="text-3xl font-bold mt-6">{en.welcome}</h1>
  <p class="mt-2">A fast and SEO-friendly blog built with Astro.</p>
  <a href="/en/blog/first-post" class="text-blue-600 underline mt-4 inline-block p-5">{en.readMore}</a>
</BaseLayout>
